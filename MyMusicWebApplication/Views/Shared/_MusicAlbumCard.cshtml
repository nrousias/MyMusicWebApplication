@model MusicAlbum

<div class="col-sm-3 col-lg-3 col-md-3">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h4><a asp-controller="MusicAlbum" asp-action="Details" asp-route-id="@Model.MusicAlbumId">@Model.Name</a></h4>
            <p><h5>@Model.ShortDescription</h5></p>
        </div>
        
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-musicAlbumId="@Model.MusicAlbumId">@Model.Price.ToString("c")</a>
            </p>
        </div>
    </div>
</div>